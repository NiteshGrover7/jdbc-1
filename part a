import java.util.ArrayList;
import java.util.Scanner;

public class AutoboxingUnboxingSum {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        ArrayList<Integer> numbers = new ArrayList<>(); // Collection to store Integer objects

        System.out.println("Enter integers separated by space:");
        String input = sc.nextLine(); // Read the entire line of input
        String[] parts = input.split(" "); // Split input into individual string numbers

        // Convert each string to Integer (String Parsing + Autoboxing)
        for (String part : parts) {
            try {
                int value = Integer.parseInt(part); // Convert String → int
                numbers.add(value); // Autoboxing: int → Integer
            } catch (NumberFormatException e) {
                System.out.println("'" + part + "' is not a valid integer. Skipping...");
            }
        }

        // Calculate sum (Unboxing: Integer → int)
        int sum = 0;
        for (Integer num : numbers) {
            sum += num; // Unboxing happens automatically here
        }

        System.out.println("The total sum of entered integers is: " + sum);

        sc.close();
    }
}
